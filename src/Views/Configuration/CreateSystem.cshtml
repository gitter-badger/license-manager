@model CreateSystemViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            Stwórz nowy system
        </div>
    </div>
    <div class="panel-body">
        <form asp-action="CreateSystem" asp-controller="Configuration" asp-anti-forgery="true" method="POST">
            <div class="form-group">
                <label asp-for="Name"></label>:
                <span asp-validation-for="Name" class="text-danger"></span>
                <input type="text" asp-for="Name" class="form-control" placeholder="Podaj nazwę.." />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>:
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea asp-for="Description" class="form-control" placeholder="Podaj opis.." rows="4"></textarea>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-save"></span>
                    Zapisz dane
                </button>
                <button type="reset" class="btn btn-default">
                    <span class="fa fa-refresh"></span>
                    Wyczyść formularz
                </button>
            </div>
        </form>
    </div>
</div>

<a asp-controller="Configuration" asp-action="Systems" class="btn btn-default">
    <span class="fa fa-undo"></span>
    Powrót do listy systemów
</a>