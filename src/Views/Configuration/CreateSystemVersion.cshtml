@model CreateSystemVersionViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            Stwórz nową wersję systemu
        </div>
    </div>
    <div class="panel-body">
        <form asp-action="CreateSystemVersion" asp-controller="Configuration" asp-anti-forgery="true" method="POST">
            <div class="form-group">
                <label asp-for="Major"></label>:
                <span asp-validation-for="Major" class="text-danger"></span>
                <input type="text" asp-for="Major" class="form-control" placeholder="Podaj numer główny.." />
            </div>
            <div class="form-group">
                <label asp-for="Minor"></label>:
                <span asp-validation-for="Minor" class="text-danger"></span>
                <input type="text" asp-for="Minor" class="form-control" placeholder="Podaj numer dodatkowy.." />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>:
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea asp-for="Description" class="form-control" placeholder="Podaj opis.." rows="4"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="SystemId"></label>:
                <span asp-validation-for="SystemId" class="text-danger"></span>
                <select asp-for="SystemId" asp-items="@ViewBag.SystemSelectListItems" class="form-control"></select>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-save"></span>
                    Zapisz dane
                </button>
                <button type="reset" class="btn btn-default">
                    <span class="fa fa-refresh"></span>
                    Wyczyść formularz
                </button>
            </div>
        </form>
    </div>
</div>

<a asp-controller="Configuration" asp-action="SystemVersions" class="btn btn-default">
    <span class="fa fa-undo"></span>
    Powrót do listy wersji systemów
</a>