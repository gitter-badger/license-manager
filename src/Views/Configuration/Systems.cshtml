@model SystemsViewModel

<div class="col-xs-3 list-group">                    
    <a asp-controller="Configuration" asp-action="Clients" class="list-group-item">
        <span class="fa fa-users"></span>
        Klienci <span class="badge">@ViewBag.NonDeletedClientsCount</span>
    </a>
    <a asp-controller="Configuration" asp-action="Systems" class="list-group-item active">
        <span class="fa fa-laptop"></span>
        Systemy <span class="badge">@ViewBag.NonDeletedSystemsCount</span>
    </a>
    <a asp-controller="Configuration" asp-action="SystemVersions" class="list-group-item">
        <span class="fa fa-server"></span>
        Wersje systemów <span class="badge">@ViewBag.NonDeletedSystemVersionsCount</span>
    </a>
</div>
<div class="col-xs-9">
    <div class="table-filters text-right">
        Pokaż usunięte:
        <input type="checkbox" data-bind="bootstrapSwitch: ShowDeletedSystems" data-size="mini" data-on-text="Tak" data-off-text="Nie" data-on-color="success" data-off-color="danger" />
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Table">
            <tr data-bind="if: $data.Deleted() ? $root.ShowDeletedSystems : true, css: $data.Deleted() ? 'text-muted' : ''">
                <td class="col-xs-1 text-center" data-bind="text: ($index() + 1) + '.'"></td>
                <td class="col-xs-3" data-bind="text: $data.Name()"></td>
                <td class="col-xs-5">
                    <em data-bind="text: $data.Description()"></em>
                </td>
                <td class="col-xs-3 text-center">
                    <a data-bind="css: $data.Deleted() ? 'btn btn-default disabled' : 'btn btn-default', attr: { href: '@Url.Action("ModifySystem", "Configuration")' + '/' + $data.Id() }">
                        <span class="fa fa-edit"></span>
                        Edytuj
                    </a>
                    <div data-bind="css: $data.Deleted() ? 'btn btn-danger disabled' : 'btn btn-danger', click: $root.Delete">
                        <span class="fa fa-remove"></span>
                        Usuń
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <a asp-controller="Configuration" asp-action="CreateSystem" class="btn btn-success">
        <span class="fa fa-plus"></span>
        Stwórz nowy system
    </a>
    <a asp-controller="Configuration" asp-action="Index" class="btn btn-default">
        <span class="fa fa-undo"></span>
        Powrót do strony głównej
    </a>
</div>

@section scripts {
    <script src="~/js/ViewModels/SystemsVM.js"></script>
    <script src="~/js/ko.bindingHandlers/bootstrapSwitch.js"></script>
    <script>
        var json = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Table.Rows));
        var viewModel = new SystemsVM(json);
        viewModel.DeleteActionUrl = '@Url.Action("DeleteSystem", "Configuration")';
        ko.applyBindings(viewModel);
    </script>
}